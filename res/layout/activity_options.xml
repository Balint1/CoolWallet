<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackround"
    tools:context="lokter.hu.coolwallet.OptionsActivity"
    android:id="@+id/cordLay">
    <include android:id="@+id/toolbar" layout="@layout/options_bar"
        />

    <TextView
        android:text="@string/starting_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView2"
        android:hint="sajtatatatagsd"/>
    <EditText
        android:id="@+id/startingEditText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:inputType="numberDecimal"/>
    <TextView
        android:text="@string/animations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:id="@+id/textView3" />
    <Switch
        android:id="@+id/animateSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/startingEditText"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="49dp"
        android:checked="true"/>

</android.support.constraint.ConstraintLayout>
